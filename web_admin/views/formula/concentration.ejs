<!DOCTYPE HTML>
<html>
<% include ../main/top.ejs %>
<body class="gray-bg">
<div class="wrapper wrapper-content">
    <div class="col-sm-12">
        <div class="ibox">
            <div class="ibox-body">
                <input type="hidden" id="formulaId" value="<%= formulaId %>">
                <table id="exampleTable" data-mobile-responsive="true">
                </table>
            </div>
        </div>
    </div>
</div>
<% include ../main/bottom.ejs %>
<script type="text/javascript">

    $(function () {
        load();
    });

    function load() {
        $('#exampleTable')
            .bootstrapTable(
                {
                    method: 'post', // 服务器数据的请求方式 get or post
                    url: "/formula/getConcentrationList", // 服务器数据的加载地址
                    method: 'POST',                      //请求方式（*）
                    showRefresh: false,
                    showToggle: false,
                    showColumns: false,
                    iconSize: 'outline',
                    toolbar: '#exampleToolbar',
                    striped: true, // 设置为true会有隔行变色效果
                    dataType: "json", // 服务器返回的数据类型
                    pagination: false, // 设置为true会在底部显示分页条
                    // queryParamsType : "limit",
                    // //设置为limit则会发送符合RESTFull格式的参数
                    singleSelect: false, // 设置为true将禁止多选
                    contentType: "application/x-www-form-urlencoded",
                    // //发送到服务器的数据编码类型
                    pageSize: 20, // 如果设置了分页，每页数据条数
                    pageNumber: 1, // 如果设置了分布，首页页码
                    //dataField: "data",//这是返回的json数组的key.默认好像是"rows".这里只有前后端约定好就行
                    pageList: [50, 100, 200, 500],//分页步进值
                    search: false, // 是否显示搜索框
                    showColumns: false, // 是否显示内容下拉框（选择显示的列）
                    sidePagination: "server", // 设置在哪里进行分页，可选值为"client" 或者 "server"
                    queryParams: function (params) {
                        return {
                            model: {
                                //说明：传入后台的参数包括offset开始索引，limit步长，sort排序列，order：desc或者,以及所有列的键值对
                                pageSize: params.limit||0,
                                pageNo: ((params.offset / params.limit) + 1)||10,
                                formulaId: $('#formulaId').val(),
                            }
                        };
                    },
                    columns: [
                        {
                            field: 'formulaModel.name',
                            align: 'center',
                            title: '配方名称'
                        },
                        {
                            field: 'dyeModel.name',
                            align: 'center',
                            title: '染料名称'
                        },

                        {
                            field: "concentration",
                            align: 'center',
                            title: '浓度(%)'
                        }
                    ]
                });
    }

    function reLoad() {
        $('#exampleTable').bootstrapTable('refresh');
    }
</script>

</body>
</html>
